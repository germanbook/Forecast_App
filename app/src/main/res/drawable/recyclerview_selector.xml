<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="@dimen/default_button_rounding_radius" />
            <stroke android:width="1dp"
                android:color="@color/default_divider" />
            <solid android:color="@color/background_weather_color"/>
        </shape>
    </item>

    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="@dimen/default_button_rounding_radius" />
            <stroke android:width="1dp"
                android:color="@color/default_divider" />
            <solid android:color="@color/default_background_grey"/>
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle"  >
            <corners android:radius="@dimen/default_button_rounding_radius" />
            <stroke android:width="1dp"
                android:color="@color/default_divider" />
            <solid android:color="@color/recycler_view_item_background_color"/>
        </shape>
    </item>
</selector>